<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ScannerActivity">

    <com.zoctan.smarthub.ui.custom.TitleBar
        android:id="@+id/TitleBar_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:theme="@style/AppTheme" />

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/DecoratedBarcodeView_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:zxing_framing_rect_height="200dp"
        app:zxing_framing_rect_width="200dp"
        app:zxing_preview_scaling_strategy="centerCrop"
        app:zxing_scanner_layout="@layout/scanner"
        app:zxing_use_texture_view="true" />

    <ImageView
        android:id="@+id/ImageView_torch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_torch_off"
        android:tint="@color/un_select"
        tools:ignore="ContentDescription" />
</FrameLayout>