<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextInputLayout_device_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:counterOverflowTextAppearance="@style/TextErrorAppearance"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/TextErrorAppearance"
        app:hintTextAppearance="@style/HintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EditText_device_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hub_hint_input_device"
            android:inputType="text"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/edit_size" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/Button_device_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textSize="16sp"
        app:fb_borderColor="#FFFFFF"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="@color/transparent"
        app:fb_focusColor="@color/half_transparent"
        app:fb_radius="30dp"
        app:fb_text="@string/hub_detail_update_device_img"
        app:fb_textColor="@color/primary_text" />
</LinearLayout>