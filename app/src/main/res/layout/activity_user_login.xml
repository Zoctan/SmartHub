<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/mAppbar"
            layout="@layout/toolbar" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="2dp"
                    app:elevation="5dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/ic_launcher"
                        tools:ignore="ContentDescription" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/tabTextSecond" />
            </LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:id="@+id/mLayoutLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <!--用户名层-->
        <FrameLayout
            android:id="@+id/mLayoutName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:gravity="center">

            <!--用户图标-->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:background="@mipmap/ic_user"
                tools:ignore="ContentDescription" />

            <!--用户名框-->
            <EditText
                android:id="@+id/mEtLoginName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/etName"
                android:inputType="text"
                android:maxLength="25"
                android:paddingEnd="60dp"
                android:paddingStart="30dp"
                android:textColorHint="@color/secondaryText"
                android:textColorLink="@color/primaryLight"/>
        </FrameLayout>

        <!--密码层-->
        <FrameLayout
            android:id="@+id/mLayoutPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mLayoutName"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <!--密码图标-->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:background="@mipmap/ic_password"
                tools:ignore="ContentDescription" />

            <!--密码框-->
            <EditText
                android:id="@+id/mEtLoginPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/etPassword"
                android:inputType="textPassword"
                android:maxLength="25"
                android:paddingStart="30dp"
                android:paddingEnd="60dp"
                android:textColorHint="@color/secondaryText"
                android:textColorLink="@color/primaryLight" />

            <!--显示密码-->
            <CheckBox
                android:id="@+id/mBtnPwdEye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="5dp"
                android:button="@drawable/pwd_eye"
                android:checked="false" />
        </FrameLayout>

        <!--注册密码层-->
        <FrameLayout
            android:id="@+id/mLayoutRegister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mLayoutPassword"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:visibility="gone">

            <!--密码图标-->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:background="@mipmap/ic_password"
                tools:ignore="ContentDescription" />

            <!--密码框-->
            <EditText
                android:id="@+id/mEtRegisterPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/etPassword2"
                android:inputType="textPassword"
                android:maxLength="25"
                android:paddingEnd="60dp"
                android:paddingStart="30dp"
                android:textColorHint="@color/secondaryText"
                android:textColorLink="@color/primaryLight" />
        </FrameLayout>

        <!--验证码层-->
        <FrameLayout
            android:id="@+id/mLayoutProve"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mLayoutRegister"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:visibility="visible">

            <!--验证码图标-->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:background="@mipmap/ic_prove"
                tools:ignore="ContentDescription" />

            <!--验证码输入框-->
            <EditText
                android:id="@+id/mEtProve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/etProve"
                android:paddingEnd="60dp"
                android:paddingStart="30dp" />

            <!--验证码图片-->
            <ImageButton
                android:id="@+id/mBtnProve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/ic_hub"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <!--登录按钮-->
        <Button
            android:id="@+id/mBtnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mLayoutProve"
            android:layout_marginTop="10dp"
            android:background="@color/primary"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/mProgressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/mBtnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:visibility="gone" />

        <!--注册-->
        <Button
            android:id="@+id/mBtnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/mBtnLogin"
            android:layout_below="@id/mBtnLogin"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|start"
            android:text="@string/register"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>


