<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:id="@+id/GridLayout_timer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="vertical"
    android:padding="12dp"
    android:rowCount="2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ImageView_timer_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_marginEnd="14dp"
        android:layout_rowSpan="2"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_switch"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/ImageView_timer_name"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_row="0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ImageView_timer_repeat"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_row="1"
        android:textSize="14sp" />

    <com.nightonke.jellytogglebutton.JellyToggleButton
        android:id="@+id/Switch_timer_open_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center|end"
        android:layout_rowSpan="2"
        app:jtbDraggable="false"
        app:jtbDuration="500"
        app:jtbLeftBackgroundColor="@color/half_transparent"
        app:jtbLeftText="关闭"
        app:jtbLeftTextColor="@color/white"
        app:jtbLeftTextSize="12sp"
        app:jtbLeftThumbColor="@color/danger"
        app:jtbRightBackgroundColor="@color/half_transparent"
        app:jtbRightText="开启"
        app:jtbRightTextColor="@color/white"
        app:jtbRightTextSize="12sp"
        app:jtbRightThumbColor="@color/accent"
        app:jtbTextMarginBottom="1dp"
        app:jtbTextMarginCenter="9dp"
        app:jtbTextMarginLeft="8dp"
        app:jtbTextMarginRight="8dp"
        app:jtbTextMarginTop="1dp" />
</GridLayout>