<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ios="false"
    app:swipeEnable="true">

    <GridLayout
        android:id="@+id/GridLayout_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="vertical"
        android:padding="12dp"
        android:rowCount="2">

        <ImageView
            android:id="@+id/ImageView_timer_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_marginEnd="14dp"
            android:layout_rowSpan="2"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_switch"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/ImageView_timer_name"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_row="0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ImageView_timer_repeat"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_row="1"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/Switch_timer_open_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center|end"
            android:layout_rowSpan="2" />

    </GridLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/Button_timer_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/danger"
        android:text="@string/all_delete"
        android:textColor="@android:color/white" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>