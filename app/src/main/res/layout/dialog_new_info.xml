<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextInputLayout_user_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:counterOverflowTextAppearance="@style/TextErrorAppearance"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/TextErrorAppearance"
        app:hintTextAppearance="@style/HintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EditText_user_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/user_hint_input_username"
            android:inputType="text"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/edit_size" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/grey" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextInputLayout_user_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        app:counterOverflowTextAppearance="@style/TextErrorAppearance"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/TextErrorAppearance"
        app:hintTextAppearance="@style/HintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EditText_user_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/user_hint_input_phone"
            android:inputType="text"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/edit_size" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/grey" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextInputLayout_user_mail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/TextErrorAppearance"
        app:hintTextAppearance="@style/HintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EditText_user_mail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/user_hint_input_mail"
            android:inputType="text"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/edit_size" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>